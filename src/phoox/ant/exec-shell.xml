<project name="shell">

<macrodef name="shell">

	<attribute name="executable" />
	<attribute name="failonerror" default="true" />

	<element name="args" optional="yes" implicit="yes" />

	<sequential>
		<exec executable="@{executable}" failonerror="@{failonerror}">
			<args />
		</exec>
	</sequential>

</macrodef>

</project>
